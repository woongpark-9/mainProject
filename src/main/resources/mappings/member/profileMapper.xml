<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="profileMapper">
	<resultMap type="profileVO" id="profileResult">
	<id property="profile_id" column="PROFILE_ID" />
	<result property="email" column="EMAIL" />
	<result property="profile_name" column="PROFILE_NAME"/>
	<result property="horror" column="HORROR" />
	<result property="comic" column="COMIC"/>
	<result property="action" column="ACTION"/>
	<result property="profile_img" column="PROFILE_IMG" />
	<result property="kids" column="KIDS" />
	<result property="thriller" column="THRILLER" />
	<result property="sf" column="SF" />
	<result property="adventure" column="ADVENTURE" />
	<result property="drama" column="DRAMA" />
	<result property="animation" column="ANIMATION" />
	<result property="crime" column="CRIME" />
	<result property="familyg" column="FAMILYG" />
	<result property="fantasy" column="FANTASY" />
	<result property="mystery" column="MYSTERY" />
	<result property="romance" column="ROMANCE" />
	<result property="melodrama" column="MELODRAMA" />
	<result property="a_historical_drama" column="A_HISTORICAL_DRAMA" />
</resultMap>

<!-- 프로파일 가져오기 -->
<select id="getProfileList" resultType="profileVO">
	SELECT * FROM PROFILE
	WHERE email = 'jch7931@naver.com' order by profile_id asc
</select>

<select id="getProfile" resultType="profileVO">
	SELECT * FROM PROFILE
	WHERE profile_id = #{profile_id} order by profile_id asc
</select>

<select id="profileAdd">
	INSERT INTO PROFILE( 
	PROFILE_ID
	, EMAIL
	, PROFILE_NAME
	, PROFILE_IMG
	, KIDS)
	VALUES( 6
	, 'jch7931@naver.com'
	, #{profile_name}
	, 'http://yonom.duckdns.org/images/profile/Netflix-avatar0.png'
	, #{kids}
	)
</select>

<select id="updateProfile">
	UPDATE profile SET 
	PROFILE_NAME = #{profile_name},
	PROFILE_IMG = #{profile_img},
	KIDS = #{kids}
	WHERE PROFILE_ID = #{profile_id}
</select>

</mapper>